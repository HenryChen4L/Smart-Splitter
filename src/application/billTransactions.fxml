<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #FFF7ED; -fx-font-family: 'Arial'; -fx-font-size: 14px; -fx-padding: 10;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <Button style="-fx-background-color: #E1E1E1; -fx-text-fill: #333;" text="Back" />
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #FF6B00;" text="Billing Transactions" />
    <TextField maxHeight="75" minHeight="75" prefHeight="75" />
    <Label text="Bill Involvement" />
    <TextField fx:id="howManyBills" promptText="How many bills" />
    <Label text="I Should Repay" />
    <TextField fx:id="howMuchToPay" promptText="Amount to repay" />
    <Label text="I Should Collect" />
    <TextField fx:id="howMuchToReceive" promptText="Amount to collect" />
    <Label text="Total Collection" />
    <TextField fx:id="totalReceive" promptText="Total amount" />
</VBox>