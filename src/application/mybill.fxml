            <Button fx:id="personalButton" onAction="#handlePersonalAction" prefHeight="37.0" prefWidth="146.0" style="-fx-background-color: #D9534F; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 20;" text="My Accout" />
         </children>
      </HBox>
      <ScrollPane prefHeight="479.0" prefWidth="380.0">
        <content>
          <AnchorPane fx:id="list" minHeight="0.0" minWidth="0.0" prefHeight="498.0" prefWidth="349.0" />
        </content>
      </ScrollPane>
   </children>
</VBox>
